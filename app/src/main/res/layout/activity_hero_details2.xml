<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marvel_red"
    tools:context=".HeroDetails">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:src="@drawable/pow2"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/pow3"
        />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="900dp"
        android:layout_height="550dp"
        android:background="@color/white_smoke"
        android:rotation="-15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:elevation="50dp"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white_smoke"
        android:elevation="200dp"
        android:background="@drawable/rec_soft"
        android:foreground="@drawable/ic_baseline_share_24"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/i6"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/bikingiscool"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:lottie_autoPlay="true"
        android:layout_marginTop="28dp"
        app:lottie_loop="true"
        android:rotation="-15"
        android:elevation="60dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:background="@drawable/rec_soft"
        android:text="Amarjit"
        android:gravity="center"
        android:fontFamily="@font/waltograph42"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:elevation="70dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/s"
        app:layout_constraintTop_toTopOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="90dp"
        android:elevation="85dp"
        android:layout_marginLeft="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i1"
        android:textSize="16sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i2"
        android:textSize="16sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i3"
        android:textSize="16sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i4"
        android:textSize="16sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i3"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i5"
        android:textSize="16sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i4"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i6"
        android:textSize="16sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/i5"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i7"
        android:textSize="11sp"
        android:text="Hello"
        android:gravity="center_vertical"
        android:fontFamily="@font/chalkboard"
        android:elevation="50dp"
        android:textColor="@color/black"
        android:background="@drawable/rec_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i6"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="25dp"
        android:backgroundTint="@color/white_smoke"
        android:elevation="40dp"
        android:foreground="@drawable/ic_baseline_home_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>