<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marvel_red"
    tools:context=".HeroSearch">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/bikingiscool"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toTopOf="@id/login1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <LinearLayout
        android:id="@+id/login1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="200dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pow2"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/abc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pow3"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login2"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            app:layout_constraintTop_toTopOf="@id/login1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/white_smoke"
                android:elevation="30dp"
                app:layout_constraintTop_toTopOf="@id/login2"
                app:layout_constraintStart_toStartOf="@id/login2"
                app:layout_constraintEnd_toEndOf="@id/login2"/>

            <TextView
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="33dp"
                android:fontFamily="@font/chalkboard"
                android:gravity="center"
                android:text="Fire those neurons ..."
                android:textSize="26dp"
                app:layout_constraintEnd_toEndOf="@id/login2"
                app:layout_constraintStart_toStartOf="@id/login2"
                app:layout_constraintTop_toTopOf="@id/login2" />

            <EditText
                android:id="@+id/l2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:elevation="33dp"
                android:fontFamily="@font/chalkboard"
                android:hint="  Enter a name"
                app:layout_constraintEnd_toEndOf="@id/login2"
                app:layout_constraintStart_toStartOf="@id/login2"
                app:layout_constraintTop_toBottomOf="@id/l1"
                android:background="@color/lgrey"
                android:inputType="text"/>


            <TextView
                android:id="@+id/l4"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:elevation="33dp"
                app:layout_constraintStart_toStartOf="@id/login2"
                app:layout_constraintEnd_toEndOf="@id/login2"
                app:layout_constraintTop_toBottomOf="@id/l2"
                android:layout_marginTop="25dp"
                android:text="Search"
                android:textSize="20dp"
                android:gravity="center"
                android:fontFamily="@font/chalkboard"
                android:background="@drawable/rounded"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/load"
                app:layout_constraintStart_toStartOf="@id/login2"
                app:layout_constraintEnd_toEndOf="@id/login2"
                app:layout_constraintTop_toTopOf="@id/l2"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:elevation="14dp"
                app:lottie_rawRes="@raw/loading"
                android:layout_marginTop="55dp"/>

            <TextView
                android:id="@+id/l5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="35dp"
                app:layout_constraintStart_toStartOf="@id/login2"
                app:layout_constraintEnd_toEndOf="@id/login2"
                app:layout_constraintTop_toBottomOf="@id/l4"
                android:layout_marginTop="25dp"
                android:text="The most powerful psych engine"
                android:textSize="15dp"
                android:textColor="@color/lgrey"
                android:gravity="center"
                android:fontFamily="@font/chalkboard"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 112.13.53.67 "
            android:fontFamily="@font/chalkboard"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>